<p id="notice"><%= notice %></p>

<h1>Searches</h1>

<table>
  <thead>
    <tr>
      <th>Tabella</th>
      <th>Campo</th>
      <th>Argomento</th>
      <th>Data</th>
      <th>Occorrenze</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @searches.each do |search| %>
      <tr>
        <td><%= search.tabella %></td>
        <td><%= search.campo %></td>
        <td><%= search.argomento %></td>
        <td><%= search.data %></td>
        <td><%= search.occorrenze %></td>
        <td><%= link_to 'Show', search %></td>
        <td><%= link_to 'Edit', edit_search_path(search) %></td>
        <td><%= link_to 'Destroy', search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

